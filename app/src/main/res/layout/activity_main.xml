<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_5"
    tools:context=".bluetoothsample.view.SampleBtActivity">


    <Button
        android:id="@+id/btn_search"
        android:layout_width="342dp"
        android:layout_height="95dp"
        android:layout_marginBottom="40dp"
        android:background="@mipmap/img_4"
        app:layout_constraintBottom_toTopOf="@+id/btn_connect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="342dp"
        android:layout_height="95dp"
        android:layout_marginBottom="508dp"
        android:background="@mipmap/img_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/found_device"
        android:layout_width="166dp"
        android:layout_height="53dp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="308dp"
        app:layout_constraintTop_toTopOf="@id/btn_connect"/>

    <TextView
        android:id="@+id/tv_device"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <Button
        android:id="@+id/btn_disconnect"
        android:layout_width="413dp"
        android:layout_height="58dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/switch_media"
        app:layout_constraintTop_toBottomOf="@+id/btn_connect"
        app:layout_constraintVertical_bias="0.746"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/ll_send_cmd"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="364dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/switch_media"
        android:layout_width="413dp"
        android:layout_height="58dp"
        android:layout_marginBottom="32dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_recognition"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp" />

    <Button
        android:id="@+id/btn_recognition"
        android:layout_width="413dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_connect"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp" />


    <Button
        android:id="@+id/btnrank"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>